<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style  name="TranslucentStatusAppTheme" parent="AppTheme.NoActionBar">

    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>


    <style name="AppTheme.EmptyAppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="navigationIcon">@drawable/ic_arrow_back_black_24dp</item>
        <item name="actionMenuTextColor">@color/theme</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">0</item>
        <item name="title"></item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.EmptyPopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="actionBarStyle">@style/AppTheme.EmptyAppBarOverlay</item>
    </style>

    <style name="DefaultToolBar" parent="Widget.AppCompat.Toolbar">
        <item name="actionMenuTextColor">@color/tv_color_menu</item>
    </style>

    <style name="MenuTextStyle">
        <item name="android:textColor">@color/tv_color_menu</item>
        <item name="android:textSize">17sp</item>
    </style>



    <!--分割线-->
    <style name="line_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray_divider</item>
    </style>

    <!--底部弹框-->
    <style name="dialog_bottom" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
